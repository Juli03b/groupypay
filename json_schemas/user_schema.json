{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "User schema",
    "description": "Schema to validate user inputs.",
    "default": {},
    "examples": [
        {
            "first_name": "first",
            "last_name": "last",
            "email": "joey.poser@gmail.com",
            "password": "2iIU#EESdW",
            "phone_number": "+1 999-999-999"
        }
    ],
    "required": [
        "first_name",
        "last_name",
        "email",
        "password"
    ],
    "properties": {
        "first_name": {
            "$id": "#/properties/first_name",
            "type": "string",
            "title": "The first_name schema",
            "description": "First name must me at leaset one character, and at most 20.",
            "default": "",
            "minLength": 1,
            "maxLength": 20,
            "examples": [
                "first",
                "Julio",
                "A"
            ]
        },
        "last_name": {
            "$id": "#/properties/last_name",
            "type": "string",
            "title": "The last_name schema",
            "description": "Last name must me at least one character, and at most 20.",
            "default": "",
            "minLength": 1,
            "maxLength": 20,
            "examples": [
                "Last",
                "B",
                "Doe"
            ]
        },
        "email": {
            "$id": "#/properties/email",
            "type": "string",
            "title": "The email schema",
            "description": "Email.",
            "default": "",
            "format": "email",
            "minLength": 6,
            "maxLength": 127,
            "examples": [
                "joe.poser@gmail.com"
            ]
        },
        "password": {
            "$id": "#/properties/password",
            "type": "string",
            "title": "The password schema",
            "description": "Password must be at least 5 characters, and at most 30",
            "default": "",
            "minLength": 5,
            "maxLength": 20,
            "examples": [
                "IaMW@!!",
                "12345678910111213141516171819"
            ]
        },
        "phone_number": {
            "$id": "#/properties/phone_number",
            "type": "string",
            "title": "The phone_number schema",
            "description": "Phone",
            "default": "",
            "minLength":10,
            "maxLength":15,
            "examples": [
                "+1 999-999-999"
            ]
        }
    },
    "additionalProperties": true
}